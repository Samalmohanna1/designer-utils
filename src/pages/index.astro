---
import Layout from '../layouts/Layout.astro'
import App from '../components/App'
---

<Layout title='Tools | MYOL Creative'>
	<main
		class='mx-auto p-4 md:p-8 bg-zinc-100 rounded-b-md shadow-sm container'
	>
		<h1 class='text-4xl mb-4 tracking-tight uppercase'>
			&#127912; Color Scale Generator
		</h1>
		<App client:load />
	</main>
	<footer
		class='mx-auto p-4 md:p-8 bg-zinc-100 rounded-t-md shadow-sm container mt-8'
	>
		<div class='flex flex-col md:flex-row gap-4 md:justify-between'>
			<div class='flex gap-2 align-middle'>
				<h4 class='font-UbuntuMonoRegular leading-normal'>
					&#128181; Support our Project:
				</h4>
				<a
					href='https://minigames.myol-creative.com'
					target='_blank'
					rel='noopener noreferrer'
					aria-label='myol minigames website.'
					class='font-robotoCondensed font-bold uppercase'
					>MYOL MiniGames
				</a>
			</div>
			<div class='flex gap-2 align-middle'>
				<p>&#128151; Created by</p><a
					href='https://sam-almohanna.com'
					target='_blank'
					rel='noopener noreferrer'
					aria-label='sams website.'
					class='font-robotoCondensed font-bold uppercase'
					>Sam Almohanna</a
				>
			</div>
		</div>
	</footer>
</Layout>
