---
import Layout from '../layouts/Layout.astro'
import App from '../components/App'
---

<Layout title='Tools | MYOL Creative'>
	<main class='mx-auto p-s bg-cream-100 rounded-b-md shadow-xs container'>
		<App client:load />
	</main>
	<footer
		class='mx-auto p-s bg-cream-100 rounded-t-md shadow-xs container mt-m'
	>
		<div class='flex flex-col md:flex-row gap-s md:justify-between'>
			<div class='flex gap-2xs align-middle'>
				<h4>&#128181; Support our Project:</h4>
				<a
					href='https://minigames.myol-creative.com'
					target='_blank'
					rel='noopener noreferrer'
					aria-label='myol minigames website.'
					class='font-roboto-condensed font-bold uppercase'
					>MYOL MiniGames
				</a>
			</div>
			<div class='flex gap-2xs align-middle'>
				<p>&#128151; Created by</p><a
					href='https://sam-almohanna.com'
					target='_blank'
					rel='noopener noreferrer'
					aria-label='sams website.'
					class='font-roboto-condensed font-bold uppercase'
					>Sam Almohanna</a
				>
			</div>
		</div>
	</footer>
</Layout>
